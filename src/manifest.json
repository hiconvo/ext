{
  "manifest_version": 2,
  "name": "Convo",
  "short_name": "convo",
  "version": "0.3",
  "description": "Save your links",
  "homepage_url": "https://convo.events",
  "permissions": ["storage", "activeTab", "tabs", "https://api.convo.events/"],
  "icons": {
    "16": "icon-16x16.png",
    "32": "icon-32x32.png",
    "64": "icon-64x64.png",
    "128": "icon-128x128.png",
    "256": "icon-256x256.png",
    "512": "icon-512x512.png"
  },
  "browser_action": {
    "default_popup": "popover.html"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "content_security_policy": "script-src 'self'; object-src 'self';"
}
